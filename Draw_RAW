import time
from tkinter import*
animation = Tk()
canvas1 = Canvas(animation, width = 800, height = 800)
canvas1.pack()
canvas1.create_polygon(10, 30, 30, 50, 50, 30, 30, 10, smooth=1, fill='#A0522D')
canvas1.create_polygon(10, 30, 30, 50, 50, 30, 30, 10, smooth=0, fill='#FFFF00')
for x in range(0, 500):
    canvas1.move(1, 2, 0)
    canvas1.move(2, 0, 2)
    animation.update()
    time.sleep(0.01)
else:
    quit()
